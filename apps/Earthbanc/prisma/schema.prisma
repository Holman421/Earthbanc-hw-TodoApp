generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("NEON_DB")
  shadowDatabaseUrl = env("NEON_DB_SHADOW")
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

model Todo {
  id          String   @id @default(cuid())
  title       String
  description String
  priority    Priority
  done        Boolean  @default(false)
  createdAt   DateTime @default(now())
}
